<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hb.androidcontrols">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".view.activity.MainControlsListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Activity Indicator - AV Loading Indicator View-->
        <activity
            android:name=".view.activity.AVLoadingIndicatorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.AVLoadingIndicatorViewActivity"
            android:screenOrientation="portrait" />

        <!-- Activity Indicator - Spots Progress Dialog-->
        <activity
            android:name=".view.activity.SpotsProgressDialogActivity"
            android:screenOrientation="portrait" />

        <!-- Activity Indicator - Geometric Progress View-->
        <activity
            android:name=".view.activity.GeometricProgressViewActivity"
            android:screenOrientation="portrait" />

        <!-- Progress Bar - Arc Progress Stack View-->
        <activity
            android:name=".view.activity.ArcProgressStackViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ArcProgressStackViewPresentationActivity"
            android:screenOrientation="sensorLandscape" />

        <!-- Progress Bar - Circle Alarm Timer View-->
        <activity
            android:name=".view.activity.CircleAlarmTimerViewActivity"
            android:screenOrientation="portrait" />

        <!-- Empty Screens - LoadSir-->
        <activity
            android:name=".view.activity.EmptyScreensLoadSir_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.loadsir.target.NormalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.loadsir.target.ConvertorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.loadsir.target.FragmentSingleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.loadsir.target.ViewTargetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.loadsir.target.MultiFragmentWithViewPagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.loadsir.target.MultiFragmentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.loadsir.target.PlaceholderActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>